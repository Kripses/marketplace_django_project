                                                        //}, 5000);
                                                        function fadeOut(element) {
                                                            let op = 1;  // initial opacity
                                                            const timer = setInterval(function () {
                                                                if (op <= 0.1) {
                                                                    clearInterval(timer);
                                                                    element.remove();
                                                                }
                                                                element.style.opacity = op;
                                                                element.style.filter = 'alpha(opacity=' + op * 100 + ")";
                                                                op -= op * 0.1;
                                                            }, 50);
                                                        }
                                                        // Automatically dismiss the message after 5 seconds (5000 milliseconds)
                                                        setTimeout(function () {
                                                            fadeOut(msgDiv);
                                                        }, 5000);
