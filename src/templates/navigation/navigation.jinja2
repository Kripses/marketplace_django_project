<style>
  .menu-item .active {
    color: #0063d1;
  }
</style>

<div class="Section-column">
    <div class="Section-columnSection">
        <header class="Section-header">
            <strong class="Section-title">Навигация
            </strong>
        </header>
        <div class="Section-columnContent">
            <div class="NavigateProfile">
                <ul class="menu menu_vt">
                    <li class="menu-item">
                      <a class="menu-link" id="account" href="{{ url('account:account') }}">Личный кабинет</a>
                    </li>
                    <li class="menu-item"> {#menu-item_ACTIVE #}
                      <a class="menu-link" id="profile" href="{{ url('account:profile') }}">Профиль</a>
                    </li>
                    <li class="menu-item">
                      <a class="menu-link" id="historyorder" href="{{ url('account:historyorder') }}">История заказов</a>
                    </li>
                    <li class="menu-item">
                      <a class="menu-link" id="browsing_history" href="{{ url('account:browsing_history') }}">История просмотров</a>
                    </li>
                    <li class="menu-item">
                      <a class="menu-link" href="{{ url('account:logout') }}">Выход</a>
                    </li>

                </ul>
            </div>
        </div>
    </div>
</div>

<script>
  path = window.location.pathname;
    if (path.includes("profile")) {
      document.getElementById("profile").classList.add("active");
      } else if (path.includes("historyorder")) {
      document.getElementById("historyorder").classList.add("active")
      } else if (path.includes("account/account")) {
      document.getElementById("account").classList.add("active")
      } else if (path.includes("browsing-history")) {
      document.getElementById("browsing_history").classList.add("active");
  }
</script>
