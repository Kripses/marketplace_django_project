{% extends 'base.jinja2' %}

{% block title %}
    Megano
{% endblock %}

{% block header %}
    {% include 'common/header_full.jinja2' %}
    {% if banners and banners.slider %}
    <div class="Header-slider">
        <div class="Slider Slider_main">
            <div class="Slider-box">
                {% for banner in banners.slider %}
                    <div class="Slider-item">
                        <div class="Slider-content">
                            <div class="row">
                                <div class="row-block">
                                    <strong class="Slider-title">
                                        {{ banner.name|truncate(30) }}
                                    </strong>
                                    <div class="Slider-text">
                                        {{ banner.description|truncate(250) }}
                                    </div>
                                    <div class="Slider-footer">
                                        <a class="btn btn_primary"
                                           href="{{ banner.absolute_url }}">Get Started</a>
                                    </div>
                                </div>
                                <div class="row-block">
                                    <div class="Slider-img">
                                        <img src="{{ banner.image_url }}" alt="Product image"/>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                {% endfor %}
            </div>
            <div class="Slider-navigateWrap">
                <div class="Slider-navigate">
                </div>
            </div>
        </div>
    </div>
    {% endif %}
{% endblock %}

{% block content %}
    <div class="Middle">
        <div class="Section">
            {% if banners and banners.fixed %}
                <div class="wrap">
                    <div class="BannersHome">
                        {% for banner in banners.fixed %}
                            <a class="BannersHomeBlock"
                               href="{{ banner.absolute_url }}">
                                <div class="BannersHomeBlock-row">
                                    <div class="BannersHomeBlock-block">
                                        <strong class="BannersHomeBlock-title">
                                            {{ banner.name }}
                                        </strong>
                                        <div class="BannersHomeBlock-content">
                                            from&#32;<span class="BannersHomeBlock-price">${{ banner.min_price }}</span>
                                        </div>
                                    </div>
                                    <div class="BannersHomeBlock-block">
                                        <div class="BannersHomeBlock-img">
                                            <img src="{{ banner.image_url }}" alt="Product image" />
                                        </div>
                                    </div>
                                </div>
                            </a>
                        {% endfor %}
                    </div>
                </div>
            {% endif %}
        </div>

        <div class="Section Section_column Section_columnLeft Section_columnDesktop">
            <div class="wrap">
                <div class="Section-column">
                    <div class="Section-columnSection Section-columnSection_mark">
                      <header class="Section-columnHeader">
                        <strong class="Section-columnTitle">ОГРАНИЧЕННЫЕ ПРЕДЛОЖЕНИЯ
                        </strong>
                      </header>
                      <div class="Card"><a class="Card-picture" href="#"><img src="{{ static('assets/img/content/home/card.jpg') }}" alt="card.jpg"/></a>
                        <div class="Card-content">
                          <strong class="Card-title"><a href="#">Corsair Carbide Series Arctic White Steel</a>
                          </strong>
                          <div class="Card-description">
                            <div class="Card-cost"><span class="Card-priceOld">$115.00</span><span class="Card-price">$85.00</span>
                            </div>
                            <div class="Card-category">News / xbox
                            </div>
                          </div>
                          <div class="CountDown" data-date="31.09.2020 03:59">
                            <div class="CountDown-block">
                              <div class="CountDown-wrap">
                                <div class="CountDown-days">
                                </div><span class="CountDown-label">days</span>
                              </div>
                            </div>
                            <div class="CountDown-block">
                              <div class="CountDown-wrap">
                                <div class="CountDown-hours">
                                </div><span class="CountDown-label">hours</span>
                              </div>
                            </div>
                            <div class="CountDown-block">
                              <div class="CountDown-wrap">
                                <div class="CountDown-minutes">
                                </div><span class="CountDown-label">mins</span>
                              </div>
                            </div>
                            <div class="CountDown-block">
                              <div class="CountDown-wrap">
                                <div class="CountDown-secs">
                                </div><span class="CountDown-label">secs</span>
                              </div>
                            </div>
                          </div>
                        </div>
                      </div>
                    </div>
                </div>
                <div class="Section-content">
                    <header class="Section-header">
                        <h2 class="Section-title">Популярные товары</h2>
                    </header>
                    <div class="Cards">
                        {% if top_sellers %}
                            {% for card in top_sellers %}
                                <div class="Card">
                                    <a class="Card-picture" href="{{ card.absolute_url }}">
                                        <img src="{{ card.image_url }}" alt="Product image" />
                                    </a>
                                    <div class="Card-content">
                                        <strong class="Card-title">
                                            <a href="{{ card.absolute_url }}">{{ card.name }}</a>
                                        </strong>
                                        <div class="Card-description">
                                            <div class="Card-cost">
                                                <span class="Card-price">${{ card.price }}</span>
                                            </div>
                                            <div class="Card-category">
                                                {{ card.category }}
                                            </div>
                                            <div class="Card-hover">
                                                <a class="Card-btn" href="{{ card.absolute_url }}">
                                                    <img src="{{ static('assets/img/icons/card/cart.svg') }}" alt="cart.svg" />
                                                </a>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            {% endfor %}
                        {% endif %}
                    </div>
                </div>
            </div>
        </div>

        <div class="Section Section_column Section_columnRight">
            {% if limited_offers %}
                <div class="wrap">
                    <div class="Section-content">
                        <div class="Slider Slider_carousel">
                            <header class="Section-header Section-header_close">
                                <h2 class="Section-title">Ограниченный тираж
                                </h2>
                                <div class="Section-control">
                                    <div class="Slider-navigate">
                                    </div>
                                </div>
                            </header>
                            <div class="Slider-box Cards">
                                {% for offer in limited_offers %}
                                    <div class="Slider-item">
                                        <div class="Slider-content">
                                            <div class="Card">
                                                <a class="Card-picture" href="{{ offer.absolute_url }}">
                                                    <img src="{{ offer.image_url }}" alt="Product image" />
                                                </a>
                                                <div class="Card-content">
                                                    <strong class="Card-title">
                                                        <a href="{{ offer.absolute_url }}">{{ offer.name }}</a>
                                                    </strong>
                                                    <div class="Card-description">
                                                        <div class="Card-cost">
                                                            <span class="Card-price">${{ offer.price }}</span>
                                                        </div>
                                                        <div class="Card-category">
                                                            {{ offer.category }}
                                                        </div>
                                                        <div class="Card-hover">
                                                            <a class="Card-btn" href="{{ offer.absolute_url }}">
                                                                <img src="{{ static('assets/img/icons/card/cart.svg') }}" alt="cart.svg" />
                                                            </a>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                {% endfor %}
                            </div>
                        </div>
                    </div>
                </div>
            {% endif %}
        </div>
    </div>
{% endblock %}